<h1>Prosty sklep</h1>

<p>
  Wybierz kategorię:
  <% @categories.each do |c| %>
      <% if c != @category %>
        <b><%= link_to c.name, c %></b>
      <% else %>
        <b><%= c.name %></b>
      <% end %>
  <% end %>
</p>
<%= link_to "Nowa kategoria", new_category_path %>
<%= link_to "Edytuj kategorię", edit_category_path(@category) %>
<%= link_to "Usuń kategorię", category_path(@category), method: :delete, data: { confirm: 'Na bank?' } %>

<hr size="3" color="black" />

<h4>Produkty:</h4>

<table>
  <tr>
    <th>Nazwa</th>
    <th>Cena</th>
    <th></th>
    <th></th>
  </tr>

  <% @products_cat.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to "Więcej", product_path(product) %></td>
        <td><%= link_to "Edytuj", edit_product_path(product) %></td>
        <td><%= link_to "Usuń", product_path(product), method: :delete, data: { confirm: 'Na bank?' } %></td>
      </tr>
  <% end %>
</table><br>

<%= link_to "Nowy produkt", new_product_path %>